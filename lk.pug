extends layout.pug

block content

  include components/header.pug

  .grid.grid--container
    h1.h1 Личный кабинет
    hr.hr
    .row
      .col.col--lg-4
        h2.h2 Личные данные
        .well.well--info.info
          .info__name Сидоров Петр Иванович
          .info__offset
            strong эл.почта:
            span Sidorov@mail.ru
          .info__offset
            strong тел.;
            span + 7 918 123 45 67
          hr.hr
          .info__offset
            span «Краснодар авто»
          .info__offset
            strong ИНН:
            span 3275934603868
        a(href="#edit").btn.btn--empty.open-modal
          i.icon.icon-user-plus
          span Изменить

        .small-offset

        .accordion.accordion--active.accordion--sale
          .accordion__header.accordion--weird
            .icon-in-circle
              i.icon.icon-price-tag
              span Вам доступны скидки
          .accordion__arrow
          .accordion__body
            table.table-sale
              thead
                th Наименование
                th.text-primary Скидка
              tbody
                tr
                  td Боксмарк
                  td 5 %
                tr
                  td Хиллманн Наппа
                  td 5 %

      .col.col--lg-8
        h2.h2 Здравствуйте, Петр!
        .lk-infoblock
          .some-info
            i.sprite.sprite--info
            span Приветствуем Вас! Это — Ваша персональная инфопанель, где Вы можете обновить Ваши персональные данные и платежные реквизиты, а также просмотреть информацию о Ваших заказах
          a(href="#invite").btn.btn--primary.open-modal
            i.icon.icon-user-tie
            span Пригласить покупателя
        .responsive-table
          table.table
            thead
              th Дата
              th № заказа
              th Стоимость
              th Статус
            tbody
              tr
                td 2016/08/23
                td 51239690
                td 1 700 р. 
                td Заказ отправлен
              tr.done
                td 2016/08/23
                td 51239690
                td 8 800 р. 
                td
                  span Доставлено
                  a(href="").send-review
                    .icon-in-circle
                      i.icon.icon-bubble2
                    span Оставить отызв
        
        .accordion.accordion--active
          .accordion__header.weird-header Оставить отзыв
          .accordion__arrow
          .accordion__body
            form.form
              .form-control
                textarea(placeholder="Ваш отзыв")
              .btn.btn--empty
                i.icon.icon-bubbles4
                span Отправить

  #invite.modal
    .modal__title Пригласить покупателя
    p Пригласите своего друга совершить покупку в нашем интернет-магазине!
    form.form
      .form-control
        input(type="mail" value="http://127.0.0.1:32769/start.html#p=личный_каб43инет&g=1t")
      .btn.btn--primary
        i.icon.icon-user-tie
        span Пригласить покупателя

  #edit.modal
    .modal__title Личные данные
    form.form
      .form-control
        input(type="text" name="first-name" placeholder="Фамилия")
      .form-control
        input(type="text" name="second-name" placeholder="Имя")
      .form-control
        input(type="text" name="father-name" placeholder="Отчество")
      .form-control
        input(type="tel" name="tel" placeholder="Телефон")
      .form-control
        input(type="email" name="email" placeholder="Эл. почта")
      .form-control
        input(type="text" name="region" placeholder="Регион")
      .form-control
        input(type="text" name="city" placeholder="Город")
      .form-control
        input(type="password" name="first-password" placeholder="Пароль")
      .form-control
        input(type="password" name="second-password" placeholder="Повторите пароль")
      .row
        .col.col--sm-9
          .form-control
            input(type="text" placeholder="Логотип вашей компании")
        .col.col--sm-3
          label.file-upload
            .btn.btn--empty
              i.icon.icon-upload
              span Выбрать
            input(type="file")
      hr.hr
      .form-control
        input(type="text" placeholder="Название организации")
      .form-control
        input(type="text" placeholder="ИНН")
      .form-control
        input(type="password" placeholder="Пароль")
      .form-control
        input(type="password" placeholder="Повторите пароль")
      p Я хочу получать уведомления о статусах заказа по
      label.checkbox
        input(type="checkbox" id="i-want-email")
        label(for="i-want-email")
        span Эл. почта
      label.checkbox
        input(type="checkbox" id="i-want-sms")
        label(for="i-want-sms")
        span Эл. почта
      .modal__btn-group
        .btn.btn--primary.btn--empty
          i.icon.icon-user-check
          span Сохранить


  include components/footer.pug
