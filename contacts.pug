        h2.inner-header Контактные данные
        form.form.form--inner(action="mail.php" method="post")
          .row
            .col.col--sm-6
              .form-control
                input(type="text" placeholder="Ваше имя" name="name")
            .col.col--sm-6
            .col.col--sm-6
              .form-control
                input(type="email" placeholder="Эл. почта" name="email")
            .col.col--sm-6
              .form-control
                input(type="tel" placeholder="Телефон" name="phone")
            .col.col--sm-12
              .form-control
                textarea(name="mess")
              //- label.checkbox
              //-   input(type="checkbox" id="checkbox-1")
              //-   label(for="checkbox-1")
              //-   span Я не робот
              button.btn.btn--middle
                i.icon.icon-envelop
                span Отправить

  include components/footer.pug
