block content

  include components/header.pug

  .grid.grid--container
    h1.h1 Контактная информация
    hr.hr
    .map.map--inner
      iframe(src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2817.7601649323938!2d38.96815711522059!3d45.070376079098295!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40f045edad9a7e49%3A0xf4a7bfc6a30f9619!2z0YPQuy4g0JTQt9C10YDQttC40L3RgdC60L7Qs9C-LCAxMjHQujUsINCa0YDQsNGB0L3QvtC00LDRgCwg0JrRgNCw0YHQvdC-0LTQsNGA0YHQutC40Lkg0LrRgNCw0LksIDM1MDA1MQ!5e0!3m2!1sru!2sru!4v1495464301885" frameborder="0" style="border:0" allowfullscreen)

    .row
      .col.col--md-6.mobile-offset
        h2.inner-header Контактные данные
        .inner-table
          .inner-table__row
            .icon-in-circle
              i.icon.icon-map
            span Россия, г. Краснодар ул. Дзержинского 121/5
          .inner-table__row
            .icon-in-circle
              i.icon.icon-phone
            span 8 (800) 30-11-920
          .inner-table__row
            .icon-in-circle
              i.icon.icon-envelop
            span info@avtokozha.com
