doctype html
html(lang="ru")
  head
    meta(charset="utf-8")
    title Автокожа
    meta(name="viewport" content="user-scalable=no, width=device-width, initial-scale=1, maximum-scale=1")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="format-detection" content="telephone=no")
    link(rel="stylesheet", href="styles/css/vendor.css")
    link(rel="stylesheet", href="styles/css/main.css")
  body

    main
      block content

    footer.main-footer
      .main-footer__top
        .grid.grid--container
          .main-footer__nav.nav
            a(href="").nav__link Конфигуратор
            a(href="").nav__link Прайс-лист
            a(href="").nav__link Доставка и оплата
            a(href="").nav__link Статьи
            a(href="").nav__link Отзывы
            a(href="").nav__link Контакты
      .main-footer__middle
        .grid.grid--container
          .row.row--sm-center
            .col.col--xl-4.col--lg-5.col--md-3.col--sm-3.col--xs-6.main-footer__icons
              p Мы в социальных сетях
              a(href="")
                i.icon.icon-facebook
              a(href="")
                i.icon.icon-vk
              a(href="")
                i.icon.icon-instagram
            .col.col--xl-4.col--lg-3.col--md-3.col--sm-2.col--xs-6.main-footer__icons
              p Напишите нам
              a(href="")
                i.icon.icon-skype
              a(href="")
                i.icon.icon-bubble
            .col.col--xl-4.col--lg-4.col--md-6.col--sm-7.col--xs-12.text-right
              .webformula
                i.icon.icon-hammer
                span Создание сайта — 
                a(href="") Webformula
      .main-footer__bottom
        .grid.grid--container
          .row
            .col.col--sm-3.copyright &copy; 2017 Avtokoja.ru
            .col.col--sm-5.conditions
              a(href="") Условия использования сайта
            .col.col--sm-4.sitemap-link
              a(href="") Карта сайта


    script(src="js/jquery.min.js")
    script(src="js/jquery.fullpage.min.js")
    script(src="js/jquery.magnific-popup.min.js")
    script(src="js/jquery.inputmask.bundle.min.js")
    script(src="js/main.js")
