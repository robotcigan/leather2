.grid--container
  padding 0 ((140 / 1900) * 100)%
  max-width 100%


.hr
  border none
  border-bottom 1px solid #eaeaea
  margin-bottom 4rem

.logo
  background url('../../img/logo.png') no-repeat
  background-size contain
  color #fff
  display inline-block
  font-weight 600
  letter-spacing 1px
  // margin-right 5rem
  size(2rem, 17rem)
  text-decoration none
  text-transform uppercase


.main-header
  left 0
  position fixed
  position relative
  top 0
  width 100%
  z-index 100
  &__container
    align-items center
    display flex
  &__top
    background-color #000
    color #fff
    .top
      &__adress
        display inline-block
        margin-right (70 / 1625 * 100)%
        .icon
          margin-right 1rem
      &__phone
        display inline-block
        margin-right (70 / 1625 * 100)%
        .icon
          margin-right 1rem
      &__callback
        border-left 1px solid #363636
        border-right 1px solid #363636
        color $primary
        cursor pointer
        display inline-block
        padding 2rem
        transition all .2s
        text-decoration none
        .icon
          margin-right 1rem
        &:hover
          color $main
          background-color $primary
  // .row
  //   height 6.5rem
  .logo
    margin-right (95 / 1625 * 100)%

.second-header
  position relative
  &--index
    .navbar
      border-bottom none

.navbar
  border-bottom $border
  padding 2rem 0
  &__link
    color $main
    display inline-block
    text-decoration none
    &:not(:last-child)
      margin-right 3.5rem
    &:hover
      color $primary
    &--home
      margin-left 2rem
      margin-right 0 !important
  .sprite--separator
    vertical-align bottom
  &__section
    display inline-block
    &--icons
      margin-left (490 / 1625 * 100)%

.mobile-menu
  background-color #fff
  // border-bottom 4px solid $primary
  display none
  left 0
  height calc(100vh - 8rem)
  padding 1rem 3rem
  position absolute
  top 6rem
  width 100%
  z-index 50
  &__link
    color $main
    display block
    font-size 1.8rem
    margin-bottom 2.4rem
    text-decoration none
    

.mobile-menu-toggle
  cursor pointer
  display none
  position relative
  size(12px, 15px)
  &:before
    content ''
    left -.8rem
    position absolute
    top -.9rem
    circle(3rem)
  span
    background-color $main
    display block
    height 1px
    position absolute
    top 0
    transition transform .3s
    width 15px
    &:nth-child(2)
      top 5px
    &:nth-child(3)
      top 10px
  &--active
    span
      &:nth-child(1)
        transform rotate(45deg)
        top 5px
      &:nth-child(2)
        opacity 0
      &:nth-child(3)
        transform rotate(-45deg)
        top 5px


.btn-group
  display block
  margin-bottom 1rem
  width 100%
  .btn
    padding 1rem 2.5rem
    &:not(:last-child)
      margin-right 1rem



.header
  background #fff
  display inline-block
  font-size 3.6rem
  // margin-top (20 / 935 * 100)%
  margin-bottom 5rem
  margin-top 5rem
  position relative
  text-align center
  z-index 5
  &--with-subheader
    line-height 1
    margin-bottom 1rem
    // margin-bottom (50 / 935 * 100)%
  // &:before
  //   background-color $light-gray
  //   content ''
  //   height 1px
  //   left -100%
  //   position absolute
  //   top 55%
  //   width 100vw - ((280 / 1900) * 100)%
  //   z-index 0

.subheader
  margin-bottom 4rem
  margin-top 0

.map
  &--inner
    margin-bottom 10rem
  iframe
    height 70vh
    width 100%

.weird-tables
  padding 0 ((50 / 1620) * 100)%

.weird-table
  padding 0 ((70 / 1620) * 100)%
  &__title
    font-size 1.8rem
    font-weight 600
    margin-bottom ((35 / 935) * 100)%
    margin-top ((70 / 935) * 100)%
  &__row
    color $main
    display block
    line-height 2.5
    text-decoration none
    &:hover
      color $primary
    &:not(:last-child)
      border-bottom 1px solid $gray

.main-footer
  margin-top 10rem
  &__top
    padding 3rem 0
  &__middle
    background-color $secondary
    color #fff
    padding 4rem 0
  &__bottom
    padding 2rem 0
  p
    display inline-block
    margin 0
    margin-right 3.5rem
  a
    color $main
    text-decoration none
    &:hover
      color $primary
  &__icons
    a
      color #fff
      display inline-block
      font-size 2rem
      vertical-align middle
      text-decoration none
      &:not(:last-child)
        margin-right 2.2rem
      &:hover
        color $primary
  &__nav.nav
    .nav
      &__link
        color $main
        margin-right (50 / 1625 * 100)%
        text-decoration none
        &:hover
          color $primary
  &--index
    .main-footer
      &__bottom
        margin-bottom 6.5rem

.sitemap-link
  text-align right

.webformula
  text-align right
  .icon
    margin-right 1rem
  a
    color #fff
    text-decoration underline
    &:hover
      color $primary

