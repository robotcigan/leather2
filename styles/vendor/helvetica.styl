$src = '../../fonts/HelveticaNeueCyr/'

font(name, type, weight, style)
  font-family name
  src url($src + name + type + '.eot?#iefix') format('embedded-opentype'),
      url($src + name + type + '.otf') format('opentype'),
      url($src + name + type + '.woff') format('woff'),
      url($src + name + type + '.ttf') format('truetype')
  font-weight weight
  font-style style

@font-face
  font('Proxima Nova','-Regular', 400, normal)

@font-face
  font('Proxima Nova','-Semibold', 600, normal)

@font-face
  font('Proxima Nova','-Bold', 700, normal)