@media(max-width 600px)
  .configurator-header.items
    flex-wrap wrap
    .item
      margin-bottom 1rem

@media(max-width 565px)
  .turn-phone
    display block
  .configurator
    &--third
      min-height 0
      height 0
      visibility hidden

