.configurator
  background-position center top
  background-size cover
  background-repeat no-repeat
  position relative
  width 100%
  &__img
    img
      width 100%
      height 100%
  &__container
    left 0
    justify-content space-between
    padding-left ((50 / 1620) * 100)%
    position absolute
    top ((80 / 600) * 100)%
    width 100%
    z-index 5
    &--bottom
      bottom 3rem
      top initial
  .form-control
    display inline-block
    margin-right 1rem
  &__links
    margin-bottom ((150 / 415) * 100)%
  &__subtitle
    color #fff
    font-size 2rem
    font-weight 700
    margin-bottom ((45 / 415) * 100)%
  &__link
    color #fff
    cursor pointer
    // display inline-block
    display table
    font-size 1.8rem
    line-height 1
    margin-bottom ((30 / 415) * 100)%
    padding-left 6rem
    text-decoration none
    position relative
    &:after
      background url('../../img/icons/small-arrow.png') no-repeat
      background-size contain
      content ''
      display block
      left 110%
      opacity 0
      position absolute
      size(15px, 8px)
      top 0
      transform translateX(-5px)
      transition all .2s
    &:hover
      color $primary
      &:after
        opacity 1
        transform none
  &--first
    height ((600 / 966) * 100)vh
  &--third
    position relative
    &:before
      // background repeating-linear-gradient(
      //   to right,
      //   transparent 0,
      //   transparent 35px,
      //   rgba(#eee, .2) 35px,
      //   rgba(#eee, .2) 36px
      // )
      background url('../../img/grid.png')
      background-size 100%
      content ''
      left 0
      position absolute
      pointer-events none
      top 0
      circle(100%)
      z-index 1

.configurator-price
  color #fff
  display inline-block
  line-height 1
  vertical-align middle
  span
    display inline-block
    line-height 1
    margin-right 1rem

.configurator-header.items
  margin-bottom 4rem
  .item
    display inline-block
    color #ccc
    font-size 1.8rem
    line-height 1
    margin-right 4rem
    &--first
      padding-left 3rem
      position relative
      vertical-align middle
      &:before
        background-color #ccc
        content ''
        display inline-block
        left 0
        position absolute
        size(100%, 2px)
        vertical-align middle
    &--active
      color $main
      font-weight 600

@media(max-width 1600px)
  .configurator
    &__subtitle
      font-size 1.6rem
    &__link
      font-size 1.4rem
      padding-left 4rem

@media(max-width 1300px)
  .configurator
    &__link
      padding-left 0
    .sprite
      display block
      margin-bottom 1rem