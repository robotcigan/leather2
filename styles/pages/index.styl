.hero
  height calc(100vh - 6rem)
  height 100%
  overflow hidden
  &__bg
    display block
    background-repeat no-repeat
    // background-size cover !important
    background-size contain !important
    height calc(100vh - 6rem)
    position absolute
    z-index -1
    width 100%
  .grid--container
    height calc(100vh - 6rem)
  &__container.container
    align-content flex-end
    display flex
    flex-flow row wrap
    flex 0 1 100%
    height 100%
    padding-bottom (33 / 780 * 100)%
    width 75rem
    .container
      &__title
        color #fff
        font-size 5rem
        font-weight 700
        line-height 1
        margin-bottom .5rem
        position relative
        &:before
          content ''
          background url('../../img/icons/title-arrow.png')
          size(3.3rem, 2.6rem)
          display block
          left -4rem
          position absolute
          top .7rem
      &__subtitle
        color #fff
        display block
        font-size 1.6rem
        margin-bottom 2rem
        width 100%
      &__btn
        display inline-block
  &--main
    height calc(100vh - 13.5rem)
    .hero
      &__bg
        background-size cover !important
    .grid--container
      height calc(100vh - 13.5rem)
  &--develop
    height calc(100vh - 40rem)
    margin-bottom 0
    & + .main-footer
      margin-top 0
    .grid--container
      height calc(100vh - 40rem)
    .hero
      &__bg
        background-repeat repeat
        background-size initial !important
        height calc(100vh - 40rem)
      &__container.container
        align-items center
        flex-direction column
        justify-content center
        text-align center
        width 100%
        .container
          &__title
            color #3c383b
            font-size 7.2rem
            margin-top 1rem
            &:before
              display none

.photo-samples
  clearfix()
  a
    display block
    float left
    padding 0 .2rem
    width 25%
    img
      max-width 100%

.review
  background-color $blue
  display block
  color $main
  clearfix()
  cursor pointer
  margin-bottom 2rem
  padding ((55 / 935) * 100)% ((65 / 780) * 100)%
  text-decoration none
  &:hover
    background-color $secondary
    color #fff
    position relative
    &:before
      background-color $primary
      bottom 0
      content ''
      height 4px
      left ((70 / 780) * 100)%
      position absolute
      width 8.5rem
  &__img
    background-size cover
    background-repeat no-repeat
    background-position 50%
    border-radius 50%
    display block
    circle(15rem)
    float left
    margin-right ((40 / 780) * 100)%
  &__title
    font-size 2.4rem
    line-height 1
    margin-bottom 1rem
    margin-top 1.5rem
  &__text
    font-size 1.8rem

.reviews
  .col
    &:nth-of-type(3),
    &:nth-of-type(4)
      .review
        margin-bottom 0