.hero
  height 100%
  overflow hidden
  &--main
    height calc(100% - 13rem)
  &__bg
    display block
    background-repeat no-repeat
    background-size cover !important
    circle(100%)
    position absolute
    z-index -1
  .grid--container
    height 100%
  &__container.container
    align-content flex-end
    display flex
    flex-flow row wrap
    flex 0 1 100%
    height 100%
    padding-bottom (65 / 935 * 100)%
    width 70rem
    .container
      &__title
        color #fff
        font-size 5rem
        font-weight 700
        line-height 1
        margin-bottom .5rem
        position relative
        &:before
          content ''
          background url('../../img/icons/title-arrow.png')
          size(3.3rem, 2.6rem)
          display block
          left -4rem
          position absolute
          top .7rem
      &__subtitle
        color #fff
        display block
        font-size 1.6rem
        margin-bottom 2rem
        width 100%
      &__btn
        display inline-block

.photo-samples
  clearfix()
  a
    display block
    float left
    padding 0 .2rem
    width 25%
    img
      max-width 100%

.review
  background-color $blue
  display block
  color $main
  clearfix()
  cursor pointer
  margin-bottom 2rem
  padding ((65 / 780) * 100)% ((50 / 780) * 100)%
  text-decoration none
  &:hover
    background-color $secondary
    color #fff
    position relative
    &:before
      background-color $primary
      bottom 0
      content ''
      height 4px
      left ((70 / 780) * 100)%
      position absolute
      width 8.5rem
  &__img
    background-size cover
    background-repeat no-repeat
    background-position 50%
    border-radius 50%
    display block
    circle(15rem)
    float left
    margin-right 4rem
  &__title
    font-size 2.4rem
    margin-bottom 1rem
    margin-top 1.5rem
  &__text
    font-size 1.8remj
